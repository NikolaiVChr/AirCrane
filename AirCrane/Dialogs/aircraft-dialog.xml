<PropertyList>

    <name>aircraft-dialog</name>
    <layout>vbox</layout>
    <resizable>false</resizable>
    <modal>false</modal>
    <draggable>true</draggable>

    <nasal>
        <open>
            # Payload Package
            #var p = getprop("/sim/model/payload-package");
            #setprop("sim/model/j3cub/payload-package_flag_0", 0);
            #setprop("sim/model/j3cub/payload-package_flag_1", 0);
            #setprop("sim/model/j3cub/payload-package_flag_2", 0);
            #setprop("sim/model/j3cub/payload-package_flag_" ~ p, 1);
        </open>
    </nasal>

    <group>
        <layout>hbox</layout>

        <empty><stretch>true</stretch></empty>
        <text>
            <label>Aircraft Options</label>
        </text>
        <empty><stretch>true</stretch></empty>

        <button>
            <legend/>
            <key>Esc</key>
            <pref-width>16</pref-width>
            <pref-height>16</pref-height>
            <binding>
                <command>dialog-close</command>
            </binding>
        </button>
    </group>

    <hrule/>

    <group>
      <layout>hbox</layout>
      <padding>6</padding>
            <group>
                <layout>vbox</layout>
                <halign>left</halign>
                <text>
                    <halign>left</halign>
                    <label>start color effect</label>
                    <enable>
                        <not>
                            <property>/sim/rendering/rembrandt/enabled</property>
                        </not>
                    </enable>
                </text>
            </group>
            <group>
                <layout>vbox</layout>
                <text>
                    <halign>left</halign>
                    <label>red-start</label>
                    <enable>
                        <not>
                            <property>/sim/rendering/rembrandt/enabled</property>
                        </not>
                    </enable>
                </text>
                <slider>
                    <name>red-start</name>
                    <enable>
                        <not>
                            <property>/sim/rendering/rembrandt/enabled</property>
                        </not>
                    </enable>
                    <min>0.0</min>
                    <max>1.0</max>
                    <step>.01</step>
                    <live>true</live>
                    <property>red-start</property>
                    <binding>
                        <command>dialog-apply</command>
                        <object-name>red-start</object-name>
                    </binding>
                </slider>
                  <text>
                      <halign>left</halign>
                      <row>1</row>
                      <col>2</col>
                      <property>/red-start</property>
                      <format>%f</format>
                      <live>true</live>
                      <color>
	                      <red>0.9</red>
	                      <green>0.4</green>
	                      <blue>0.2</blue>
	                      <alpha>1</alpha>
                      </color>
                  </text>

            </group>
            <group>
                <layout>vbox</layout>
                <text>
                    <halign>left</halign>
                    <label>green-start</label>
                    <enable>
                        <not>
                            <property>/sim/rendering/rembrandt/enabled</property>
                        </not>
                    </enable>
                </text>
                <slider>
                    <name>green-start</name>
                    <enable>
                        <not>
                            <property>/sim/rendering/rembrandt/enabled</property>
                        </not>
                    </enable>
                    <min>0.0</min>
                    <max>1.0</max>
                    <step>.01</step>
                    <live>true</live>
                    <property>green-start</property>
                    <binding>
                        <command>dialog-apply</command>
                        <object-name>green-start</object-name>
                    </binding>
                </slider>
                  <text>
                      <halign>left</halign>
                      <row>1</row>
                      <col>2</col>
                      <property>/green-start</property>
                      <format>%f</format>
                      <live>true</live>
                      <color>
	                      <red>0.9</red>
	                      <green>0.4</green>
	                      <blue>0.2</blue>
	                      <alpha>1</alpha>
                      </color>
                  </text>
            </group>
            <group>
                <layout>vbox</layout>
                <text>
                    <halign>left</halign>
                    <label>blue-start</label>
                    <enable>
                        <not>
