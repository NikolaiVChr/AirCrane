<PropertyList>
  <!--nasal>
      <open>
      </open>
  </nasal-->

  <name>aircraft-dialog</name>
	<layout>vbox</layout>
	<resizable>true</resizable>
	<default-padding>3</default-padding>

  <group>
    <layout>hbox</layout>
		<default-padding>1</default-padding>
    <empty><stretch>true</stretch></empty>
    <text>
      <label>Aircraft Options</label>
    </text>
    <empty><stretch>true</stretch></empty>

    <button>
      <legend/>
      <key>Esc</key>
      <pref-width>16</pref-width>
      <pref-height>16</pref-height>
      <binding>
        <command>dialog-close</command>
      </binding>
    </button>
  </group>

  <hrule/>

  <group>
    <layout>hbox</layout>
    <padding>6</padding>
      <checkbox>
        <halign>left</halign>
        <label>Fire Suppression System</label>
        <property>sim/model/firetank/enabled</property>
        <live>true</live>
        <binding>
            <command>dialog-apply</command>
        </binding>
      </checkbox>
  </group>
  <group>
    <layout>hbox</layout>
    <padding>6</padding>
      <checkbox>
        <halign>left</halign>
        <label>Water Cannon</label>
        <property>sim/model/watercannon/enabled</property>
        <live>true</live>
        <enable>
						<property>sim/model/firetank/enabled</property>
				</enable>
        <binding>
            <command>dialog-apply</command>
        </binding>
      </checkbox>
    </group>

  <hrule/>

  <!-- Button bar -->
  <group>
    <layout>hbox</layout>
    <default-padding>6</default-padding>
    <empty><stretch>true</stretch></empty>
    <button>
      <legend>Close</legend>
      <equal>true</equal>
      <key>Esc</key>
      <default>true</default>
      <binding>
        <command>dialog-close</command>
      </binding>
    </button>
    <empty><stretch>true</stretch></empty>
  </group>

</PropertyList>
