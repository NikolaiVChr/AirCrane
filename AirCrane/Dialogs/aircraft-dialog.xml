                    <max>1.0</max>
                    <step>.01</step>
                    <live>true</live>
                    <property>blue-start</property>
                    <binding>
                        <command>dialog-apply</command>
                        <object-name>blue-start</object-name>
                    </binding>
                </slider>
                  <text>
                      <halign>left</halign>
                      <row>1</row>
                      <col>2</col>
                      <property>/blue-start</property>
                      <format>%f</format>
                      <live>true</live>
                      <color>
	                      <red>0.9</red>
	                      <green>0.4</green>
	                      <blue>0.2</blue>
	                      <alpha>1</alpha>
                      </color>
                  </text>
            </group>
            <group>
                <layout>vbox</layout>
                <slider>
                    <name>red-end</name>
                    <enable>
                        <not>
                            <property>/sim/rendering/rembrandt/enabled</property>
                        </not>
                    </enable>
                    <min>0.0</min>
                    <max>1.0</max>
                    <step>.01</step>
                    <live>true</live>
                    <property>red-end</property>
                    <binding>
                        <command>dialog-apply</command>
                        <object-name>red-end</object-name>
                    </binding>
                </slider>
                  <text>
                      <halign>left</halign>
                      <row>1</row>
                      <col>2</col>
                      <property>/red-end</property>
                      <format>%f</format>
                      <live>true</live>
                      <color>
	                      <red>0.9</red>
	                      <green>0.4</green>
	                      <blue>0.2</blue>
	                      <alpha>1</alpha>
                      </color>
                  </text>

            </group>
            <group>
                <layout>vbox</layout>
                <slider>
                    <name>green-end</name>
                    <enable>
                        <not>
                            <property>/sim/rendering/rembrandt/enabled</property>
                        </not>
                    </enable>
                    <min>0.0</min>
                    <max>1.0</max>
                    <step>.01</step>
                    <live>true</live>
                    <property>green-end</property>
                    <binding>
                        <command>dialog-apply</command>
                        <object-name>green-end</object-name>
                    </binding>
                </slider>
                  <text>
                      <halign>left</halign>
                      <row>1</row>
                      <col>2</col>
                      <property>/green-end</property>
                      <format>%f</format>
                      <live>true</live>
                      <color>
	                      <red>0.9</red>
	                      <green>0.4</green>
	                      <blue>0.2</blue>
	                      <alpha>1</alpha>
                      </color>
                  </text>
            </group>
            <group>
                <layout>vbox</layout>
                <slider>
                    <name>blue-end</name>
                    <enable>
                        <not>
                            <property>/sim/rendering/rembrandt/enabled</property>
                        </not>
                    </enable>
                    <min>0.0</min>
                    <max>1.0</max>
                    <step>.01</step>
                    <live>true</live>
                    <property>blue-end</property>
                    <binding>
                        <command>dialog-apply</command>
                        <object-name>blue-end</object-name>
                    </binding>
                </slider>
                  <text>
                      <halign>left</halign>
                      <row>1</row>
                      <col>2</col>
                      <property>/blue-end</property>
                      <format>%f</format>
                      <live>true</live>
                      <color>
	                      <red>0.9</red>
	                      <green>0.4</green>
	                      <blue>0.2</blue>
	                      <alpha>1</alpha>
                      </color>
                  </text>
            </group>
	</group>

	<hrule/>

	<group>
            <layout>hbox</layout>
            <default-padding>6</default-padding>

            <empty><stretch>true</stretch></empty>

            <button>
                <legend>Close</legend>
                <equal>true</equal>
                <key>Esc</key>
                <default>true</default>
                <binding>
                    <command>dialog-close</command>
                </binding>
            </button>
        </group>


</PropertyList>
